{
    "layer": "top",
    "height": 44,
    "spacing": 1,
    "modules-left": ["hyprland/workspaces", "wlr/taskbar"],
    "modules-center": ["memory", "cpu", "temperature"],
    "modules-right": ["mpris", "privacy", "network", "tray", "wireplumber", "clock"],

    "clock": {
	"format-alt": "<b>{:%I:%M:%S}</b> ÔÄó ",
        "format": "<b>{:%A, %B %d, %Y %I:%M:%S}</b>",
	"interval": 1,
	},

    "privacy": {
	"icon-spacing": 4,
	"icon-size": 16,
	"transition-duration": 250,
	"modules": [
		{
			"type": "screenshare",
			"tooltip": true,
			"tooltip-icon-size": 16
		},
		{
			"type": "audio-in",
			"tooltip": true,
			"tooltip-icon-size": 16
		}
	]
	},

    "temperature": {
	"critical-threshold": 85,
	"format-critical": "Ôãá <b>{temperatureC}¬∞C</b>",
	"format": "Ôãâ <b>{temperatureC}¬∞C</b>",
	"interval": 5,
	"thermal-zone": 1
	},
    
    "tray": {
	"icon-size": 16,
	"spacing": 8,
	"show-passive-items": true
	},

    "cpu": {
	"format": "Ôãõ <b>{usage}%</b>",
	"interval": 1,
        "states": {
            "warning": 80,
            "critical": 90
    },
	},

    "memory": {
	"format": "Ôî∏ <b>{percentage}%</b>",
	"interval": 1,
	 "states": {
            "warning": 80,
            "critical": 90
    },
	},

    "wireplumber": {
	"format": "{icon} <b>{volume}%</b>",
	"format-muted": "Ôö© <b>0%</b>",
	"on-click": "pamixer -t",
	"on-scroll-up": "wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 5%+",
	"on-scroll-down": "wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 5%-",
	"format-icons": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
	"max-volume": 100
	},

    "network": {
        "interface": "enp6s0",
	"format": "{ifname}",
	"format-wifi": "{essid} ({signalStrength}%) Ôá´",
	"format-ethernet": "Ôûñ  <b>{bandwidthDownBytes}</b>",
	"format-disconnected": "", //An empty format will hide the module.
	"tooltip-format": "{ifname} via {gwaddr} Û∞äó",
	"tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
	"tooltip-format-ethernet": "{ifname} ÔÉÅ",
	"tooltip-format-disconnected": "Disconnected",
	"max-length": 20
	},

    "mpris": {
	"format": "{player_icon} ~~ <b> {title} </b> ~~ {artist}",
	"format-paused": "{status_icon} ~~ <i> {title} </i> ~~ {artist}",
	"format-tooltip": "{player}: {title} - {artist} {album}",
	"max-length": 48,
	"on-click-backward": "playerctl previous",
	"on-right-click": "",
	"on-click-forward": "playerctl next",
	"on-scroll-up": "playerctl volume 0.05+",
	"on-scroll-down": "playerctl volume 0.05-",	
	"player-icons": {
		"default": "‚ñ∂",
		"mpv": "üéµ"
	},
	"status-icons": {
		"paused": "‚è∏"
	},
	},

    "hyprland/workspaces": {
	"on-click": "activate",
  	"sort-by-number": true
	},

    "wlr/taskbar": {
	"format": "{icon}",
	"icon-size": 32,
	"tooltip-format": "{title}",
	"on-click": "activate",
	"on-click-middle": "close",
	"ignore-list": [
	    "Alacritty"
    ],
    "rewrite": {
        "Firefox Web Browser": "Firefox",
        "Foot Server": "Terminal"
    }
}
}
